html
  head
    title Please Log In
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/styles.css')
  body
    .container
      .card.card-container
        img#profile-img.profile-img-card(src='/images/avatar_2x.png')
        p#profile-name.profile-name-card
        form.form-signin(action='/secure', method='post')
          p.text-center You made it to the super secrect section!
        form.form-signout(action='/', method="post")
          button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') Sign out
